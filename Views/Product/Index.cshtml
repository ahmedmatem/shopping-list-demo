@model IEnumerable<ProductViewModel>
@{
    ViewData["Title"] = "Product List";
    var products = Model.ToList();
}

<div class="container">
    <div class="row text-center">
        <h2>All Products</h2>
    </div>

    <hr />

    <div class="row">
        <a asp-controller="Product" asp-action="Add" class="btn btn-primary">Add Product</a>
    </div>

    <br/>

    <div class="row">
        @for (int i = 0; i < products.Count(); i++)
        {
            <div class="card w-50 col-6">
                <div class="card-body">
                    <h5 class="card-title">@products[i].Name</h5>
                    <a asp-action="Edit" class="btn btn-warning d-block">Edit</a>
                    <form asp-action="DeleteProduct" method="post" class="mt-3">
                        <input type="hidden" asp-route-id="@products[i].Id" />
                        <input type="submit" class="btn btn-danger d-block" value="Delete" />
                    </form>
                </div>
            </div>
        }
    </div>
</div>